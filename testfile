pipeline {
    agent any

    triggers {
        githubPush()
    }

    stages {
        stage('Clone Repository') {
            steps {
                echo 'Cloning repository...'
                git branch: 'main', url: 'https://github.com/SpoorthiKL/Calculatorjava.git'
            }
        }

        stage('Build') {
            steps {
                echo 'Building project...'
                dir('java-project') {
                    sh 'mvn compile'
                }
            }
        }

        stage('Test') {
            steps {
                echo 'Running tests...'
                dir('java-project') {
                    sh 'mvn test'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying project...'
                dir('java-project') {
                    sh 'mvn install'
                }
            }
        }
    }

    post {
        success {
            echo "Build Completed Successfully!"
        }

        failure {
            echo "Build Failed!"
        }
    }
}
